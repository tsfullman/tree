@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Eagles 2 Superbowl";
}

    <h1>@ViewBag.Series</h1>
    <h2>Issue Numberzzzz @ViewBag.Issuenumber</h2>
    <h5>Description:</h5>
        <div>@Html.Raw(ViewBag.Description)</div>
        @if (ViewBag.Artists.Length>0)
        {
            <h5>Artists</h5>
                    <div>
                        <ul>
                            @foreach (var artist in ViewBag.Artists)
                        {
                            <li>@artist</li>
                        }
                    </ul>
                </div>
        }
